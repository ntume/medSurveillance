<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:validateform="http://schemas.android.com/apk/res/com.dataware.medsurveillance"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true"
  android:background="#ffffff">
  <LinearLayout 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:id="@+id/LoginRootView"
  		android:orientation="vertical"
  		android:background="#ffffff">
  		
  		<!-- PMTCT services Form -->
		<LinearLayout
	         android:layout_width="fill_parent"
	  	     android:layout_height="wrap_content"
		     android:background="#ffffff"
		     android:orientation="vertical"
		     android:padding="5dip">
		     
		 <LinearLayout		  	
				  	android:layout_width="fill_parent"
				 	android:layout_height="wrap_content"
				  	android:padding="5dip"
				  	android:layout_gravity="center_horizontal"
				  	android:orientation="horizontal"
				  	android:weightSum="1.0" >
	
				  <com.dataware.medsurveillance.includes.RobotoTextView
				        app:typeface="roboto_condensed"
				        android:layout_width="0dp"
				        android:layout_weight=".35"
	        			android:layout_alignParentLeft="true"
				  		android:layout_height="wrap_content"
				  		android:textColor="#bb6008"
				        android:textSize="17dip"
				  		android:text="Antenatal: Motivated for Early Booking"/>
				  
				  <ToggleButton
				      android:id="@+id/antenatal"
				      android:layout_width="0dp"
			        android:layout_weight=".65"
        			android:layout_alignParentRight="true"
				      android:layout_height="wrap_content"
				      android:textOff="No"
				      android:textOn="Yes" />
		</LinearLayout>
		
		<LinearLayout		  	
				  	android:layout_width="fill_parent"
				 	android:layout_height="wrap_content"
				  	android:padding="5dip"
				  	android:layout_gravity="center_horizontal"
				  	android:orientation="horizontal"
				  	android:weightSum="1.0" >
				  
				  <com.dataware.medsurveillance.includes.RobotoTextView
				        app:typeface="roboto_condensed"
				        android:layout_width="0dp"
				        android:layout_weight=".35"
	        			android:layout_alignParentLeft="true"
				  		android:layout_height="wrap_content"
				  		android:textColor="#bb6008"
				        android:textSize="17dip"
				  		android:text="Advised for HCT"/>
				  
				  <ToggleButton
				      android:id="@+id/adv_htc"
				      android:layout_width="0dp"
			        android:layout_weight=".65"
        			android:layout_alignParentRight="true"
				      android:layout_height="wrap_content"
				      android:textOff="No"
				      android:textOn="Yes" />
		  </LinearLayout>
		  
		<LinearLayout		  	
				  	android:layout_width="fill_parent"
				 	android:layout_height="wrap_content"
				  	android:padding="5dip"
				  	android:layout_gravity="center_horizontal"
				  	android:orientation="horizontal"
				  	android:weightSum="1.0" >
				  
				  <com.dataware.medsurveillance.includes.RobotoTextView
				        app:typeface="roboto_condensed"
				        android:layout_width="0dp"
				        android:layout_weight=".35"
	        			android:layout_alignParentLeft="true"
				  		android:layout_height="wrap_content"
				  		android:textColor="#bb6008"
				        android:textSize="17dip"
				  		android:text="Postnatal Advise on Infant Feeding"/>
				  
				  <ToggleButton
				      android:id="@+id/postnatal"
				      android:layout_width="0dp"
			        android:layout_weight=".65"
        			android:layout_alignParentRight="true"
				      android:layout_height="wrap_content"
				      android:textOff="No"
				      android:textOn="Yes" />
		</LinearLayout>
		
		<LinearLayout		  	
				  	android:layout_width="fill_parent"
				 	android:layout_height="wrap_content"
				  	android:padding="5dip"
				  	android:layout_gravity="center_horizontal"
				  	android:orientation="horizontal"
				  	android:weightSum="1.0" >		  
				  <com.dataware.medsurveillance.includes.RobotoTextView
				        app:typeface="roboto_condensed"
				        android:layout_width="0dp"
				        android:layout_weight=".35"
	        			android:layout_alignParentLeft="true"
				  		android:layout_height="wrap_content"
				  		android:textColor="#bb6008"
				        android:textSize="17dip"
				  		android:text="Method of Feeding"/>
				  <Spinner
				        android:id="@+id/method_feeding"
				        android:layout_width="0dp"
				        android:layout_weight=".65"
	        			android:layout_alignParentRight="true"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dip"
				  		android:layout_marginBottom="20dip"
				        android:entries="@array/breast_feed"
				        android:prompt="@string/breast_feed_prompt" />
			</LinearLayout>
			
		<LinearLayout		  	
				  	android:layout_width="fill_parent"
				 	android:layout_height="wrap_content"
				  	android:padding="5dip"
				  	android:layout_gravity="center_horizontal"
				  	android:orientation="horizontal"
				  	android:weightSum="1.0" >	  		
				  <com.dataware.medsurveillance.includes.RobotoTextView
				        app:typeface="roboto_condensed"
				        android:layout_width="0dp"
				        android:layout_weight=".35"
	        			android:layout_alignParentLeft="true"
				  		android:layout_height="wrap_content"
				  		android:textColor="#bb6008"
				        android:textSize="17dip"
				  		android:text="Advice on Type of Feeding"/>
				  
				  <ToggleButton
				      android:id="@+id/adv_type_feed"
				      android:layout_width="0dp"
			        android:layout_weight=".65"
        			android:layout_alignParentRight="true"
				      android:layout_height="wrap_content"
				      android:textOff="No"
				      android:textOn="Yes" />
		  </LinearLayout>
		  <!--  Error message -->
          <com.dataware.medsurveillance.includes.RobotoTextView
		        app:typeface="roboto_condensed"
		        android:id="@+id/demo_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#e30000"
                android:padding="10dip"
                android:textStyle="bold"/>
          
		  <!-- Save button -->	
		  <RelativeLayout		  	
			  	android:layout_width="fill_parent"
			 	android:layout_height="wrap_content"
			  	android:padding="10dip"
			  	android:layout_gravity="center_horizontal">
			  		  
				  <Button android:text="Save" 
				      android:id="@+id/btnsave" 
				      android:layout_marginTop="10dip"
				      
				      android:layout_height="wrap_content"
				      android:layout_width="250dip"
				      android:background="@drawable/buttonyellow" 
				      android:layout_alignParentRight="true"		     
				      style="@style/Buttondual">		     
				  </Button>	  
				  
				  <Button android:text="Rest" 
				      android:id="@+id/btnreset" 
				      android:layout_alignParentLeft="true"
				      android:layout_marginTop="10dip"
				      android:layout_height="wrap_content"
				      android:layout_width="250dip"
				      android:background="@drawable/buttonred" 
				      style="@style/Buttondual">		     
				  </Button>
			  
			</RelativeLayout>
		    
		</LinearLayout>	
  		
  </LinearLayout>
</ScrollView>
